<div class="container">
    <div clas="heading">
        <div class="image-frame">
            <img src="img/eat-a-burger.jpg" width="640">
        </div>
        <h1 class="title">Eat a Yummy Burger!</h1>
    </div>

    <div class="burger-list">
        <ul>
            {{#each burgers}}
                {{#if sleepy}}
                    {{> cats/cat-block sleep=false}}
                {{/if}}
            {{/each}}
        </ul>
    </div>

    <form class="create-form">
        <div class="form-group">
        <input type="text" id="burger-request" name="name">
        </div>

        <button type="submit">Submit</button>
    </form>
    <p>Enter your favorit burger and click "Submit".</p>
</div>