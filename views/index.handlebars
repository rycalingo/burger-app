<div class="container">
    <div class="header">
        <div class="burger-img"></div>
        <h1 class="title">Yummy Burger!</h1>
    </div>

    <div class="main-section">

        <form class="create-form">
            <div class="form-group">
                <textarea id="burger-request" class="form-control" rows="4" cols="50"></textarea>
                <label for="burger-request">Enter your favorit burger.</lable>
            </div>
            <button id="submitBtn" type="submit" class="btn btn-info">Submit</button>

        </form>

        <div class="display-area">

                <ul class="burger-ready">
                    {{#each burgers}}
                    <li class="burger-item" id="{{id}}" data-devoured="{{devoured}}">
                        {{id}}. {{burger_name}}

                        <button class="devourBtn btn btn-success" data-id="{id}">Devour it!</button>
                    </li>
                    {{/each}}
                </ul>


                <ul class="burger-devoured">
                    {{#each burgers}}
                    {{#if devoured}}
                            <li class="burger-item">
                                {{id}}. {{burger_name}}
                            </li>
                    {{/if}}
                    {{/each}}
                </ul>

        </div>

    </div>    

</div>